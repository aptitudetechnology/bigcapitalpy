{% extends "base.html" %}

{% block title %}Financial Reports - BigCapitalPy{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Financial Reports</h1>
    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
            <i class="bi bi-download"></i> Export All
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-pdf"></i> PDF</a></li>
            <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-excel"></i> Excel</a></li>
            <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-text"></i> CSV</a></li>
        </ul>
    </div>
</div>

<!-- Quick Stats Overview -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Revenue (YTD)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ report_data.total_revenue | currency }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-currency-dollar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Net Profit (YTD)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ report_data.net_profit | currency }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-graph-up fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total Expenses (YTD)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ report_data.total_expenses | currency }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-receipt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Outstanding Receivables</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ report_data.accounts_receivable | currency }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reports Categories -->
<div class="row">
    <!-- Primary Financial Reports -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Primary Financial Reports</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="{{ url_for('reports.profit_loss') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-graph-up text-success me-2"></i>
                            <strong>Profit & Loss Statement</strong>
                            <br><small class="text-muted">Income, expenses, and net profit over a period</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.balance_sheet') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-balance text-info me-2"></i>
                            <strong>Balance Sheet</strong>
                            <br><small class="text-muted">Assets, liabilities, and equity at a point in time</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.cash_flow') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-currency-dollar text-primary me-2"></i>
                            <strong>Cash Flow Statement</strong>
                            <br><small class="text-muted">Cash inflows and outflows from operations</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer & Sales Reports -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Customer & Sales Reports</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="{{ url_for('reports.sales_summary') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-cart text-success me-2"></i>
                            <strong>Sales Summary</strong>
                            <br><small class="text-muted">Sales performance by period and customer</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.customer_aging') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-clock text-warning me-2"></i>
                            <strong>Customer Aging Report</strong>
                            <br><small class="text-muted">Outstanding customer balances by age</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.invoice_summary') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-file-earmark-text text-info me-2"></i>
                            <strong>Invoice Summary</strong>
                            <br><small class="text-muted">Invoice status and payment tracking</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Vendor & Expense Reports -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Vendor & Expense Reports</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="{{ url_for('reports.expense_summary') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-receipt text-danger me-2"></i>
                            <strong>Expense Summary</strong>
                            <br><small class="text-muted">Expenses by category and vendor</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.vendor_aging') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-building text-warning me-2"></i>
                            <strong>Vendor Aging Report</strong>
                            <br><small class="text-muted">Outstanding vendor balances by age</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.purchase_summary') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-bag text-info me-2"></i>
                            <strong>Purchase Summary</strong>
                            <br><small class="text-muted">Purchase orders and spending analysis</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory & Item Reports -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Inventory & Item Reports</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="{{ url_for('reports.inventory_summary') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-box text-primary me-2"></i>
                            <strong>Inventory Summary</strong>
                            <br><small class="text-muted">Current stock levels and values</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.inventory_valuation') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-currency-dollar text-success me-2"></i>
                            <strong>Inventory Valuation</strong>
                            <br><small class="text-muted">Total inventory value by item and category</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.low_stock') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                            <strong>Low Stock Alert</strong>
                            <br><small class="text-muted">Items below reorder level</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tax & Compliance Reports -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tax & Compliance Reports</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="{{ url_for('reports.australian_gst_bas') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-file-earmark-text text-warning me-2"></i>
                            <strong>Australian GST BAS Report</strong>
                            <br><small class="text-muted">Business Activity Statement for ATO submission</small>
                        </div>
                        <span class="badge bg-warning">New</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.tax_codes_report') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-gear text-secondary me-2"></i>
                            <strong>Tax Codes Configuration</strong>
                            <br><small class="text-muted">Setup and manage GST tax codes</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.tax_summary') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-percent text-info me-2"></i>
                            <strong>Tax Summary</strong>
                            <br><small class="text-muted">Sales tax collected and owed</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.general_ledger') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-journal text-secondary me-2"></i>
                            <strong>General Ledger</strong>
                            <br><small class="text-muted">Complete transaction history by account</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.trial_balance') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-calculator text-primary me-2"></i>
                            <strong>Trial Balance</strong>
                            <br><small class="text-muted">Account balances for period verification</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Reports -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Custom & Advanced Reports</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="{{ url_for('reports.custom') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-gear text-secondary me-2"></i>
                            <strong>Custom Report Builder</strong>
                            <br><small class="text-muted">Create custom reports with filters</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.profitability') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-graph-up-arrow text-success me-2"></i>
                            <strong>Profitability Analysis</strong>
                            <br><small class="text-muted">Profit margins by customer, item, or service</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    
                    <a href="{{ url_for('reports.dashboard') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-speedometer2 text-info me-2"></i>
                            <strong>Executive Dashboard</strong>
                            <br><small class="text-muted">Key performance indicators overview</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Reports -->
<div class="card shadow mt-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Recently Generated Reports</h6>
        <a href="#" class="btn btn-sm btn-outline-primary">Clear History</a>
    </div>
    <div class="card-body">
        {% if recent_reports %}
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Report Name</th>
                        <th>Period</th>
                        <th>Generated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for report in recent_reports %}
                    <tr>
                        <td>{{ report.name }}</td>
                        <td>{{ report.period }}</td>
                        <td>{{ report.created_at | dateformat }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ report.url }}" class="btn btn-outline-primary" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ report.download_url }}" class="btn btn-outline-success" title="Download">
                                    <i class="bi bi-download"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-4">
            <i class="bi bi-file-earmark-bar-graph fs-2 text-muted d-block mb-2"></i>
            <p class="text-muted">No reports generated yet. Click on any report above to get started.</p>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
// Add any interactive functionality for the reports dashboard
document.addEventListener('DOMContentLoaded', function() {
    // Add tooltips to report links
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>
{% endblock %}
